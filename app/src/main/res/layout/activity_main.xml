<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/tool_bar"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
    </android.support.v7.widget.Toolbar>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tool_bar"
        android:id="@+id/programme_list">
    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <CheckBox
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/switch_input_mode"
            android:background="@drawable/switch_input_icon"
            android:button="@null"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:id="@+id/text_input"
            android:background="@mipmap/programme_info_text"
            android:layout_weight="1"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:id="@+id/voice_input"
            android:gravity="center"
            android:text="按住说话"
            android:visibility="gone"
            android:background="@mipmap/programme_info_text"
            android:layout_weight="1"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="发送"
            android:contentDescription="点击发送消息"
            android:drawable="@drawable/send_message_icon"
            android:id="@+id/send_message"/>
    </LinearLayout>
</RelativeLayout>
